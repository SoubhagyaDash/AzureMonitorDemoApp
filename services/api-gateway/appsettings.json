{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=OrdersDb;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "EventHub": {
    "ConnectionString": "",
    "Name": "orders"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Services": {
    "OrderService": {
      "BaseUrl": "http://localhost:8080"
    },
    "InventoryService": {
      "BaseUrl": "http://localhost:3000"
    },
    "PaymentService": {
      "BaseUrl": "http://localhost:5002"
    }
  },
  "FailureInjection": {
    "Enabled": true,
    "Latency": {
      "Probability": 0.1,
      "MinDelayMs": 100,
      "MaxDelayMs": 2000
    },
    "Errors": {
      "Probability": 0.05,
      "Types": ["timeout", "database", "network"]
    }
  },
  "AllowedHosts": "*"
}